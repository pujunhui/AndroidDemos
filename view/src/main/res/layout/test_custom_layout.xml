<?xml version="1.0" encoding="utf-8"?>
<com.demo.view.layout.CustomLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#4CAF50"
        android:gravity="center"
        android:text="左上"
        app:layout_position="left_top" />


    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#4CAF50"
        android:gravity="center"
        android:text="上中"
        app:layout_position="top_center" />


    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#4CAF50"
        android:gravity="center"
        android:text="右上"
        app:layout_position="right_top" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#4CAF50"
        android:gravity="center"
        android:text="左中"
        app:layout_position="left_center" />


    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#4CAF50"
        android:gravity="center"
        android:text="中间"
        app:layout_position="center" />


    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#4CAF50"
        android:gravity="center"
        android:text="右中"
        app:layout_position="right_center" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#4CAF50"
        android:gravity="center"
        android:text="左下"
        app:layout_position="left_bottom" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#4CAF50"
        android:gravity="center"
        android:text="下中"
        app:layout_position="bottom_center" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#4CAF50"
        android:gravity="center"
        android:text="右下"
        app:layout_position="right_bottom" />
</com.demo.view.layout.CustomLayout>